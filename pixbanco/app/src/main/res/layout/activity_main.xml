<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="303dp"
        android:layout_marginBottom="414dp"
        android:onClick="btnPix"
        app:icon="@drawable/pix_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeposit"
        android:layout_width="67dp"
        android:layout_height="51dp"
        android:layout_marginStart="202dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="416dp"
        android:onClick="btnDeposit"
        app:icon="@drawable/cash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="64dp"
        android:layout_height="51dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="222dp"
        android:layout_marginBottom="415dp"
        android:onClick="btnPagar"
        app:icon="@drawable/bar_code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTransf"
        android:layout_width="71dp"
        android:layout_height="52dp"
        android:layout_marginStart="278dp"
        android:layout_marginTop="263dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="416dp"
        android:onClick="btnTransf"
        app:icon="@drawable/deposit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="513dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:text="Bem vindo ,Guilherme!"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>